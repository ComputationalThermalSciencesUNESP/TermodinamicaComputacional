    % To reset default behavior of acronyms from glossaries
    % source: section 2.9 of glossaries-extra package
    \setabbreviationstyle[acronym]{long-short}

    % New styles for symbols table
    % Style long edited, the on ei was using
    \setlength{\glsdescwidth}{0.75\textwidth}

    % Need glossaries-extra
    \glssetcategoryattribute{acronym}{glossdesc}{title}

    %\renewcommand{\glsnamefont}[1]{\textmd{#1}}
    \newglossarystyle{acr-long}{%
        % Base this style on the long style
        \setglossarystyle{long}
        \renewenvironment{theglossary}%
        {% To left justify the lists
            \begin{longtable*}[l]{l p{\glsdescwidth}}
        }{%
            \end{longtable*}
        }%
    }

    % Style with unit column
    \setlength{\glsdescwidth}{0.75\textwidth}
    \newglossarystyle{symb-unit-long}{%
        % Base this style on the list style
        \setglossarystyle{long3col}
        \renewenvironment{theglossary}
        {%
            % Change the table type to 3 columns
            \begin{longtable}[l]{%
                c %
                p{\glsdescwidth} %
                >{\centering\arraybackslash}p{1.5cm}%
            }%
        }{%
            \end{longtable}
        }%

        % Change the table header
        \renewcommand*{\glossaryheader}{%
                \bfseries Symbol
            &   \bfseries Description
            &   \bfseries Unit \\
            \hline %
            \endhead %
        }

        % Change the displayed items
        \renewcommand*{\glossentry}[2]{%
                \glstarget{##1}{\glossentryname{##1}}%
            &   \glossentrydesc{##1}% Description
            &   \glsunit{##1} %
            \tabularnewline
        }
    }

    % ================================
    %     New Glossaries Definitions
    % ================================

    % <glo> is the file extension generated by LaTeX when firt compiling
    % <gls> is the file extension generated by makeindex
    % <glg> is the file extension for a log file
    % <label> is the glossary label (type definition)
    % <title> is the name that apper when printing the glossary

    % Syntax for new glossaries
    %\newglossary[<glg>] {<label>}       {<gls>} {<glo>} {<title>}
    %------------------- -------------   ------- ------- ---------
    \newglossary[sblg]  {subscript}     {sub}   {sbt}   {Subscripts}
    \newglossary[splg]  {superscript}   {sup}   {spt}   {Superscripts}
    \newglossary[ltlg]  {latin}         {lat}   {ltn}   {Latin Letters}
    \newglossary[gklg]  {greek}         {grk}   {gre}   {Greek Letters}
    \newglossary[otlg]  {other}         {otr}   {oth}   {Others Symbols}

    % Ignored glossary to put terms that do not appear on the list
    \newignoredglossary{hidden}

    % To define a separate hidden acronym list
    % Not really necessary since last solution applies to acr as well
    %\newglossary[algh]{hidden}{acrh}{acnh}{Hidden Acronyms}

    % Creation of new key for unit
    \glsaddkey%
        {unit}
        {\glsentrytext{\glslabel}}
        {\glsentryunit}
        {\GLsentryunit}
        {\glsunit}
        {\Glsunit}
        {\GLSunit}

    % To use siunitx unit macros
    \glssetnoexpandfield{unit}

    % Definition of some commands to super- and subscripts
    % Only the main symbol will be referenced if need

    % Provides the forcsvlist command to iterate over list
    \usepackage{etoolbox}

    \newcommand*{\addscript}[1]{\glsentrytext{#1}}

    \newcommand*{\gsupsub}[3]{%
        \ensuremath{%
            \gls{#1}^{%
                \forcsvlist\addscript{#2}%
            }_{%
                \forcsvlist\addscript{#3}%
            }%
        }%
    }

    % The \negmedspace was an idea from
    % https://tex.stackexchange.com/questions/88205/math-mode-spacing-after-superscripts
    % but I dont really think it is necessary, the problem was the space after
    % the command. With the comment sign, the spacing is better for
    % superscripts
    \newcommand*{\gsuper}[2]{%
        \ensuremath{%
            \gls{#1}^{%
                \forcsvlist\addscript{#2}%
            }%
        }%\negmedspace%
    }

    \newcommand*{\gsub}[2]{%
        \ensuremath{%
            \gls{#1}_{%
                \forcsvlist\addscript{#2}%
            }%
        }%
    }
