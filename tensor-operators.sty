% List of operators for dealing with tensor notation

% Include this package in your mai document to use 4th order tensors
\usepackage{amsfonts} % for the \mathbb command fro 4th order tensors
\usepackage{bm}

% Tensors styles

% Vectors of the Euclidean space using Latin letters
\renewcommand{\vec}[1]{\ensuremath{\bm #1}}

% Vectors of the Euclidean space using Greek letters
\newcommand{\gvec}[1]{\ensuremath{\bm #1}}

% Tensors of the Euclidean space
\newcommand{\tensor}[1]{\ensuremath{\bm #1}}

% 4th order tensors of the Euclidean space
\newcommand{\fourthTensor}[1]{\ensuremath{\mathbb{#1}}}

% Computational matrices of R{mxn} and vectors of R{m}
\renewcommand{\matrix}[1] {\ensuremath{\bm{\mathrm{#1}}}}
\newcommand{\cvec}[1]{\ensuremath{\bm{\mathrm{#1}}}}


% Command for invariant of a second order tensor:
% arg1 -> order
% arg2 -> tensor label (from glossaries) - optional
% Note that the tensor is indicated by its symbol in a glossary
\usepackage{xifthen}% provides \isempty test
\newcommand{\invariant}[2]{%
    \ifthenelse{\isempty{#2}}%
        {\ensuremath{I_{#1}}}% if #2 is empty
        {\ensuremath{I_{#1,\gls{#2}}}}% if #2 is not empty
}


