% Time average symbols
\newcommand{\avg}[1] {\ensuremath{\overline{#1}}}

% Time or spatial average operators
\newcommand{\tavg}[1] {\ensuremath{\overline{#1}}}
\newcommand{\savg}[1] {\ensuremath{\left \langle {#1} \right \rangle}}

% The operators themselves as defined by their operations
\newcommand{\temporalavg}[2]{%
    \ensuremath{%
        \displaystyle
        \frac{1}{#1}
        \int_{0}^{#1}{%
            #2
        }\mathrm{d}t%
    }%
}

\newcommand{\surfaceavg}[2]{%
    \ensuremath{%
        \displaystyle
        \frac{1}{A{(#1)}}
        \int\displaylimits_{#1}{%
            #2
        }\mathrm{d}#1%
    }%
}

